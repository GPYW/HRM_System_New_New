@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Reset password";
}
<style>
    body {
        background-color: #1a1a1a !important;
        color: #ffffff;
    }

    .reset-container {
        max-width: 400px;
        margin: 50px auto;
        padding: 30px;
        background-color: #2a2a2a;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    h1 {
        font-size: 2rem;
        text-align: center;
        margin-bottom: 10px;
    }

    p {
        text-align: center;
        margin-bottom: 20px;
        color: #cccccc;
        font-size: 10px;
    }

    .form-floating {
        margin-bottom: 15px;
    }

    .form-control {
        background-color: #333333;
        color: #ffffff;
        border: 1px solid #444444;
    }

        .form-control:focus {
            background-color: #333333;
            color: #ffffff;
            border-color: #007bff;
            box-shadow: 0 0 0 0.25rem rgba(0, 123, 255, 0.25);
        }

    .form-floating label {
        color: #aaaaaa;
        font-size: 15px;
        margin-bottom: -2%;
    }

    .btn-info {
        background-color: #17a2b8;
        border-color: #17a2b8;
        color: #ffffff;
    }

        .btn-info:hover {
            background-color: #138496;
            border-color: #117a8b;
        }

    hr {
        border-top: 1px solid #fff;
        margin: 1rem 0;
    }

    .trouble-text {
        font-size: 14px;
        color: #cccccc;
        margin-bottom: 10px;
    }

    .contact-info1 {
        font-size: 12px;
        color: #aaaaaa;
        margin-bottom:-1%
        
    }

    .contact-info1 {
        font-size: 12px;
        color: #aaaaaa;
    }
</style>

<body>
<div class="reset-container">
    <row>
        <div class="col-md-12 d-flex justify-content-center">
            <img src="~/images/logo-nobg1.png" alt="Outstanders Solutions" style="width: 20%;" />
        </div><br />
    </row>
    <h1>@ViewData["Title"]</h1>
    <p>Enter your email to reset your password.</p>
    <form method="post" class="needs-validation" novalidate>
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
        <div class="form-floating">
            <label asp-for="Input.Email">Email</label>
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" required>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <button type="submit" class="w-100 btn btn-info mb-4">Reset password</button>
    </form>
    <hr>
    <p class="trouble-text">Still having trouble logging in?</p>
    <p class="contact-info1">+94 112345678</p>
    <p class="contact-info">Outstanders@gmail.com</p>
</div>
</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}