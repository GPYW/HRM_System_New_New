<div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="login-box">
        <div class="card card-outline card-light">
            <div class="card-header text-center">
                <h2><b>Login</b></h2>
            </div>
            <div class="card-body">
                <p class="login-box-msg">Sign in to your account</p>
                <form id="account" method="post">

                    <div class="input-group mb-3">
                        <input type="email" asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email" />
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                        <div class="text-danger">
                            @Html.ValidationMessageFor(m => m.Input.Email)
                        </div>
                    </div>

                    <div class="input-group mb-3">
                        @* <label asp-for="Input.Password" class="block text-sm font-medium text-gray-600">
                        <i class="bi bi-key-fill text-gray-400 enlarge-icon mr-2"></i>
                        </label> *@
                        <input type="password" asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Password" />
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                        <div class="text-danger">
                            @Html.ValidationMessageFor(m => m.Input.Password)
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-6">
                            <div class="icheck-primary">
                                @* <label asp-for="Input.RememberMe" class="flex items-center">
                                <input class="form-checkbox" asp-for="Input.RememberMe" />
                                <span class="ml-2">Remember me</span>
                                </label> *@
                                @* </div>
                                <a id="forgot-password" asp-page="./ForgotPassword" class="text-blue-500">Forgot your password?</a>
                                </div> *@
                                <input type="checkbox" id="remember" asp-for="Input.RememberMe" />
                                <label for="remember">
                                    Remember Me
                                </label>
                            </div>
                        </div>

                        <div class="col-6">
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot password</a>

                        </div>
                    </div>

                    <div class="text-sm text-center">
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-orange-200">Resend email confirmation</a>
                    </div>

                    <button id="login-submit" type="submit" class="btn btn-primary btn-block">Login</button>
                </form>


            </div>

        </div>
    </div>
</div>



