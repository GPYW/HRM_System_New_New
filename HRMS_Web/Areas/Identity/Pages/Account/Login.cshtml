<div>
    <img src="~/images/login3.png" style="position:absolute;"/>
</div>

<div class="row" >
    <div class="col-sm-6 d-flex align-items-center justify-content-center" style="height: 100vh;">
        <div class="row d-flex flex-column align-items-center">
            <p style="color:white; font-size:30px; font-weight:600;">Welcome Back :)</p>
            <img src="~/images/logo-nobg1.png" width="auto" height="250" />
            <p style="color:#2993b8; font-size:30px; font-weight:600;">Outstanders</p>
            <p style="margin-top:-5%; color:white; font-size:20px; font-weight:600;">Solutions</p>

        </div>
    </div>

    <div class="col-sm-6 d-flex align-items-center justify-content-start" style="height: 100vh;">
        <div class="login-box">
            <div class="card card-outline card-dark">
                <div class="card-header text-center" style="background-color:#343a40;">
                    <h2 style="color:white; font-weight:100;">Login</h2>
                </div>
                <div class="card-body" style="background-color: rgba(255, 255, 255, 0.5);">
                    <form id="account" method="post">
                            <div class="input-group mb-3">
                                <input type="email" asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email" />
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-envelope"></span>
                                    </div>
                                </div>
                                <div class="text-danger">
                                    @Html.ValidationMessageFor(m => m.Input.Email)
                                </div>
                            </div>
                            <div class="input-group mb-3">
                                <input type="password" asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Password" />
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-lock"></span>
                                    </div>
                                </div>
                                <div class="text-danger">
                                    @Html.ValidationMessageFor(m => m.Input.Password)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <div class="icheck-primary">
                                        <input type="checkbox" id="remember" asp-for="Input.RememberMe" />
                                        <label style="font-weight:100; font-size:12px;"for="remember">
                                            Remember Me
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <br />

                            <button id="login-submit" type="submit" class="btn btn-dark btn-block">Login</button><br />
                            <div class="text-sm text-center">
                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-orange-200">Resend email confirmation</a>
                            </div>
                            <div class="text-sm text-center">
                                <a id="forgot-password" asp-page="./ForgotPassword">Forgot password</a>
                            </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
