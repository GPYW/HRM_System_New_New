@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<!-- Login Form  -->


<div class="h-screen flex items-center flex justify-center">
    <div class="bg-blue bg-opacity-10 backdrop-blur-lg px-10 py-12 rounded-md border max-w-md w-full">
        <h2 class="text-3xl text-center mb-7 font-semibold">Login</h2>
        
        <form id="account" method="post" class="space-y-4">

            <div class="mb-4 flex items-center">
                <label asp-for="Input.Email" class="block text-sm font-medium text-gray-600">
                    <i class="bi bi-envelope-fill text-gray-400 enlarge-icon mr-2"></i>
                </label>
                <input asp-for="Input.Email" class="mt-1 ml-3 p-2 w-full border rounded-md bg-transparent" autocomplete="username" aria-required="true" placeholder="Email" />
                <div class="text-danger">
                    @Html.ValidationMessageFor(m => m.Input.Email)
                </div>
            </div>

            <div class="mb-4 flex items-center">
                <label asp-for="Input.Password" class="block text-sm font-medium text-gray-600">
                    <i class="bi bi-key-fill text-gray-400 enlarge-icon mr-2"></i>
                </label>
                <input asp-for="Input.Password" class="mt-1 p-2 w-full border rounded-md bg-transparent" autocomplete="current-password" aria-required="true" placeholder="Password" />
                <div class="text-danger">
                    @Html.ValidationMessageFor(m => m.Input.Password)
                </div>
            </div>

            <div class="flex items-center justify-between text-sm mb-4">
                <div class="flex items-center gap-1">
                    <label asp-for="Input.RememberMe" class="flex items-center">
                        <input class="form-checkbox" asp-for="Input.RememberMe" />
                        <span class="ml-2">Remember me</span>
                    </label>
                </div>
                <a id="forgot-password" asp-page="./ForgotPassword" class="text-blue-500">Forgot your password?</a>
            </div>

            <div class="text-center">
                <button id="login-submit" type="submit" class="bg-blue-500 hover:bg-blue-600 text-white rounded-md py-2 w-full">Login</button>
            </div>

            <div class="text-sm text-center">
                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-orange-200">Resend email confirmation</a>
            </div>

        </form>

