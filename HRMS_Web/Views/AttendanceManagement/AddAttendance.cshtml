@model HRMS_Web.Models.AttendanceManagement
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<form method="post">
    <div class="=boarder p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add Employee Attendance </h2>
            <hr/>
        </div>

        <div class="row">
            <div class="col-6 pb-4 row">
                <label asp-for="RecordId"></label>
                <input asp-for="RecordId" class="form-control" required>
                <span asp-validation-for="RecordId" class="text-danger"></span>
            </div>
            <div class="col-6">
                <label asp-for="Date"></label>
                <input asp-for="Date" class="form-control" id="date" name="date" type="date" required>
            </div>
        </div>
        
        <div class="row">
            <div class="col-6 pb-4 row">
                <label for="checkInTime" class="form-label">Check-In Time:</label>
                <input type="time" class="form-control" id="checkInTime" name="checkInTime" required>
            </div>

            <div class="col-6">
                <label for="checkOutTime" class="form-label">Check-Out Time:</label>
                <input type="time" class="form-control" id="checkOutTime" name="checkOutTime" required>
            </div>
        </div>
  
        <div class="row">
            <div class="col-6 pb-4 row">
                <label asp-for="Break"></label>
                <input asp-for="Break" class="form-control" required>
            </div>
            <div class="col-6">
                <label asp-for="OverTime"></label>
                <input asp-for="OverTime" class="form-control" required>
            </div>
        </div>

        <div class="row">
            <div class="col-3 pb-5 row">
               <button type="submit" class="btn btn-primary form-control">Add</button>
            </div>
            <div class="col-3">
                <a asp-controller="AttendanceManagement" asp-action="ViewHistory" class="btn btn-secondary form-control">Back to List</a>
            </div>
        </div>

    </div>
</form>