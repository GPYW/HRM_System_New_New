@{
    ViewData["Title"] = "Mark Attendance";
}
<style>
    .form-control {
        margin-bottom: 20px;
    }

    .btn-submit {
        background-color: #20c997;
        color: #fff;
        border: none;
        transition: all 0.3s ease;
    }

        .btn-submit:hover {
            background-color: #17a2b8;
        }

    .profile-card {
        background-color: #f8f9fa;
        border-radius: 10px;
        padding: 20px;
    }

    .profile-icon {
        font-size: 60px;
        color: #20c997;
    }

    .graph-container {
        background-color: #fff;
        border-radius: 10px;
        padding: 20px;
        margin-top: 20px;
    }

    .calendar-container {
        background-color: #fff;
        border-radius: 10px;
        padding: 20px;
        margin-top: 20px;
    }

    .nav_link {
        color: #000000 !important;
        font-weight: 500;
        margin-right: 20px;
    }

        .nav_link:hover {
            color: #17a2b8 !important;
        }
</style>

<div class="ml-4">
    <nav class="navbar navbar-expand-lg navbar-dark " style="background-color: #fff;">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link nav_link" asp-area="" asp-controller="AttendanceManagement" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav_link" asp-area="" asp-controller="AttendanceManagement" asp-action="Reports">Reports</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav_link" asp-area="" asp-controller="AttendanceManagement" asp-action="ViewHistory">View History</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav_link" asp-area="" asp-controller="AttendanceManagement" asp-action="MarkAttendance">Mark Attendance</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <form method="post" asp-action="SearchAttendance" class="row g-3">
            <div class="row pt-4 pb-3">
                <div class="col-md-3">
                    <label for="FromDate" class="form-label">From:</label>
                    <input type="date" class="form-control" id="FromDate" name="FromDate">
                </div>
                <div class="col-md-3">
                    <label for="ToDate" class="form-label">To:</label>
                    <input type="date" class="form-control" id="ToDate" name="ToDate">
                </div>
                <div class="col-md-6" style="margin-top:32px;">
                    <button type="submit" class="btn btn-dark">Search</button>
                    <button type="submit" formaction="ShowAllAttendance" class="btn btn-outline-dark">Show All</button>
                </div>
            </div>
        </form>
    </div>

    <table class="table table-boarded table-striped">
        <thead>
            <tr>
                <th class="bg-dark text-white">Date</th>
                <th class="bg-dark text-white">Check-In</th>
                <th class="bg-dark text-white">Check-Out</th>
                <th class="bg-dark text-white">Break</th>
                <th class="bg-dark text-white">Over Time</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Date.ToString("yyyy-MM-dd")</td>
                    <td>@obj.CheckIn</td>
                    <td>@obj.CheckOut</td>
                    <td>1 hrs</td>
                    <td>@obj.OverTime</td>
                </tr>
            }
        </tbody>
    </table>
</div>
