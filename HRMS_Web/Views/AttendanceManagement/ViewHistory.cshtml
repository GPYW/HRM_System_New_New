

<!DOCTYPE html>
<html>
<head>
    <title>Attendance Management</title>
    <!-- Include Bootstrap CSS and Bootswatch Lux theme -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://bootswatch.com/5/lux/bootstrap.min.css" rel="stylesheet">
    <!-- Include Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <!-- Include Font Awesome for icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

    <style>
        /*  body {
                                    font-family: 'Roboto', sans-serif;
                                } */

        .form-control {
            margin-bottom: 20px;
        }

        .btn-submit {
            background-color: #20c997;
            color: #fff;
            border: none;
            transition: all 0.3s ease;
        }

            .btn-submit:hover {
                background-color: #17a2b8;
            }

        .profile-card {
            background-color: #f8f9fa;
            border-radius: 10px;
            padding: 20px;
        }

        .profile-icon {
            font-size: 60px;
            color: #20c997;
        }

        .graph-container {
            background-color: #fff;
            border-radius: 10px;
            padding: 20px;
            margin-top: 20px;
        }

        .calendar-container {
            background-color: #fff;
            border-radius: 10px;
            padding: 20px;
            margin-top: 20px;
        }

    </style>
</head>


<div class="ml-4">
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container-fluid text-cneter">

            <a class="nav-link active" asp-area="" asp-controller="AttendanceManagement" asp-action="Index">Home</a>

            <a class="nav-link active" asp-area="" asp-controller="AttendanceManagement" asp-action="Reports">Reports</a>

            <a class="nav-link active" asp-area="" asp-controller="AttendanceManagement" asp-action="">View History</a>

            <a class="nav-link active" asp-area="" asp-controller="AttendanceManagement" asp-action="MarkAttendance">Mark Attendance</a>

    </div>
    </nav>
    <br/>

    <div class="container">
        <form method="post" action="submitAttendance" class="row g-3">
            <div class="row pt-4  pb-3">
                <div class="col-4">
                    @* <label for="date" class="form-label">Date:</label> *@
                    <input type="date" class="form-control" id="date" name="date" required>
                </div>
                <div class="col-4">
                    <a asp-controller="" asp-action="" class="btn btn-info">Search</a>
                </div>   
            </div>
        </form>
    </div>


    <table class="table table-boarded table-striped">
        <thead>
            <tr>
                <th class="bg-gradient-info">Employee Id</th>
                <th class="bg-gradient-info">Date</th>
                <th class="bg-gradient-info">Check-In</th>
                <th class="bg-gradient-info">Check-Out</th>
                <th class="bg-gradient-info">Break</th>
                <th class="bg-gradient-info">Over Time</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.RecordId</td>
                    <td>@obj.Date</td>
                    <td>@obj.CheckIn</td>
                    <td>@obj.CheckOut</td>
                    <td>@obj.Break</td>
                    <td>@obj.OverTime</td>
                </tr>
            }

        </tbody>
    </table>
</div>




