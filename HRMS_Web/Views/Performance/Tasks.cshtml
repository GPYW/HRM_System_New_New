

 @model HRMS_Web.Models.ApplicationUser
@using HRMS_Web.ViewModel;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tasks Dashboard</title>
    <link href="https://bootswatch.com/5/lux/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        body {
            background-color: #f0f8ff;
        }

        .badge-high {
            background-color: #dc3545;
        }

        .badge-medium {
            background-color: #ffc107;
        }

        .badge-low {
            background-color: #28a745;
        }

        .badge-not-started {
            background-color: #6c757d;
        }

        .badge-in-progress {
            background-color: #ffc107;
        }

        .badge-completed {
            background-color: #28a745;
        }

        .progress {
            height: 20px;
        }

        .progress-bar {
            line-height: 20px;
            font-size: 14px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="nav-link active" asp-area="" asp-controller="Performance" asp-action="Index">Home</a>
            <a class="nav-link active" asp-area="" asp-controller="Performance" asp-action="Projects">Projects</a>
            <a class="nav-link active" asp-area="" asp-controller="Performance" asp-action="Tasks">Tasks</a>
            <a class="nav-link active" asp-area="" asp-controller="Performance" asp-action="ViewHistory">View History </a>
            <a class="nav-link active" asp-area="" asp-controller="Performance" asp-action="Assign">Assign</a>
        </div>
    </nav>
    <div class="container mt-4">
        <!-- Task List Section -->
        <div id="taskList" class="mb-5">
            <h2>Task List</h2>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Task Name</th>
                        <th>Project Name</th>
                        <th>Due Date</th>
                        <th>Priority</th>
                        <th>Status</th>
                        <th>Completion</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Example row -->
                    <tr>
                        <td>Design Homepage</td>
                        <td>2024-06-20</td>
                        <td><span class="badge badge-high">High</span></td>
                        <td><span class="badge badge-in-progress">In Progress</span></td>
                        <td>
                            <div class="progress">
                                <div class="progress-bar" role="progressbar" style="width: 50%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">50%</div>
                            </div>
                        </td>
                        <td><button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#taskDetailsModal">View</button></td>
                    </tr>
                    <!-- Additional rows -->
                </tbody>
            </table>
        </div>

        <!-- Charts Section -->
        <div id="charts" class="mb-5">
            <h2>Task Analytics</h2>
            <div class="row">
                <div class="col-md-6">
                    <div id="piechart"></div>
                </div>
                <div class="col-md-6">
                    <div id="barchart"></div>
                </div>
            </div>
        </div>

        <!-- Task Details Modal -->
        <div class="modal fade" id="taskDetailsModal" tabindex="-1" aria-labelledby="taskDetailsModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="taskDetailsModalLabel">Task Details</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <h3>Design Homepage</h3>
                        <p><strong>Description:</strong> Create a responsive design for the homepage.</p>
                        <p><strong>Assigned By:</strong> Jane Doe</p>
                        <p><strong>Steps Required:</strong></p>
                        <ul>
                            <li>Wireframe design</li>
                            <li>HTML/CSS implementation</li>
                            <li>Responsive testing</li>
                        </ul>
                        <p><strong>Attached Files:</strong></p>
                        <ul>
                            <li><a href="#">design_mockup.jpg</a></li>
                        </ul>
                        <div class="mb-3">
                            <label for="taskStatus" class="form-label">Update Status</label>
                            <select class="form-select" id="taskStatus">
                                <br />
                                <option value="Not Started">Not Started</option>
                                <option value="In Progress" selected>In Progress</option>
                                <option value="Completed">Completed</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="taskCompletion" class="form-label">Completion Percentage</label>
                            <input type="number" class="form-control" id="taskCompletion" value="50" min="0" max="100">
                        </div>
                        <div class="mb-3">
                            <label for="taskComments" class="form-label">Add Comments</label>
                            <textarea class="form-control" id="taskComments" rows="3"></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="taskFiles" class="form-label">Attach Files</label>
                            <input class="form-control" type="file" id="taskFiles" multiple>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary" id="updateTaskButton">Update Task</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        google.charts.load('current', { 'packages': ['corechart'] });
        google.charts.setOnLoadCallback(drawCharts);

        function drawCharts() {
            drawPieChart();
            drawBarChart();
        }

        function drawPieChart() {
            var data = google.visualization.arrayToDataTable([
                ['Task Status', 'Number of Tasks'],
                ['Not Started', 5],
                ['In Progress', 10],
                ['Completed', 7]
            ]);

            var options = {
                title: 'Task Status Distribution',
                pieHole: 0.4
            };

            var chart = new google.visualization.PieChart(document.getElementById('piechart'));
            chart.draw(data, options);
        }

        function drawBarChart() {
            var data = google.visualization.arrayToDataTable([
                ['Priority', 'Number of Tasks'],
                ['High', 5],
                ['Medium', 10],
                ['Low', 7]
            ]);

            var options = {
                title: 'Task Priority Distribution',
                hAxis: { title: 'Priority' },
                vAxis: { title: 'Number of Tasks' }
            };

            var chart = new google.visualization.BarChart(document.getElementById('barchart'));
            chart.draw(data, options);
        }

        $(document).ready(function () {
            $('#updateTaskButton').click(function () {
                // Update task status, comments, and files logic here
                var completionPercentage = $('#taskCompletion').val();
                alert('Task updated successfully with ' + completionPercentage + '% completion!');
                $('#taskDetailsModal').modal('hide');
            });
        });
    </script>
</body>
</html>
