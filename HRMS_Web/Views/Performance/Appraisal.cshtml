                color: #17a2b8 !important;
            }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #fff;">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link nav_link" asp-area="" asp-controller="Performance" asp-action="Dashboard">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav_link" asp-area="" asp-controller="Performance" asp-action="Appraisal">Appraisal</a>
                    </li>
                      <li class="nav-item">
                    <a class="nav-link nav_link" asp-area="" asp-controller="Performance" asp-action="Goals">Goals</a>
                    </li> 
                    @if (User.IsInRole(SD.Role_Admin))
                    {
                        <li class="nav-item">
                            <a class="nav-link nav_link" asp-area="" asp-controller="Performance" asp-action="AdminView">Admin View</a>
                        </li>
                    }

                </ul>
            </div>
        </div>
    </nav>


    <div class="container mt-4">
        <div class="row mb-3">
            <div class="col-12 text-end">
               @*  <a asp-controller="Performance" asp-action="AppraisalF" class="btn btn-dark btn-sm" id="AppraisalForm"> *@
                <a asp-controller="Performance" asp-action="AppraisalForm" class="btn btn-dark">
                    Add New <i class="fas fa-user-plus"></i>
                </a>
            </div>
        </div>
        <table id="example1" class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <tr class="text-center">
                    <th>AppraisalID</th>
                    <th>Employee Name</th>
                    <th>Designation</th>
                    <th>Department</th>
                    <th>Appraisal Date</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
             <tbody>
                @foreach (var obj in Model)
                {
                    <tr class="text-center" id="row-@obj.AppraisalId">

                        <td>@obj.AppraisalId</td>
                        <td>@obj.Employee</td>
                        <td>@obj.Designation</td>
                        <td>@obj.Department</td>
                        <td>@obj.AppraisalDate.ToShortDateString()</td>
                       @*  <td>@(obj.AppraisalDate.ToString("yyyy-MM-dd") ?? string.Empty)</td> *@
                        <td>@obj.Status</td>
                        <td>
                            <div class="dropdown">
                                <button class="btn btn-outline-dark btn-sm dropdown-toggle" type="button" id="dropdownMenuButton-@obj.Id" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fas fa-ellipsis-v"></i>
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton-@obj.Id">
                                   @*  <a class="dropdown-item" href="@Url.Action("View", "Performance", new { Id = obj.Id })">
                                        <i class="fas fa-eye"></i> View
                                    </a> *@
                                    @* <a class="dropdown-item" href="@Url.Action("AppraisalEdit", "Performance", new {@obj.AppraisalId})">
                                        <i class="fas fa-edit"></i> Edit
                                    </a> *@
                                     <div class="dropdown-item">
                                        <a href="@Url.Action("AppraisalEdit", new { id = obj.AppraisalId })"> <i class="fas fa-edit"></i> Edit</a>
                                     </div>
                                   
                                    <a class="dropdown-item" href="javascript:void(0);" onclick="deleteAppraisal(@obj.AppraisalId)">
                                        <i class="fas fa-trash-alt"></i> Delete
                                    </a>


                                   @*  <a class="dropdown-item" href="@Url.Action("Edit", "EmployeeManagement", new { Id = obj.Id })">
                                        <i class="fas fa-edit"></i> Edit
                                    </a> *@
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody> 
        </table>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous"></script>
</body>
</html>

                    @section Scripts {
    <script>
        function deleteAppraisal(AppraisalId) {
            if (confirm("Are you sure you want to delete this appraisal?")) {
                $.ajax({
                    url: '@Url.Action("DeleteAppraisalConfirmed", "Performance")',
                    type: 'POST',
                    data: {
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val(),
                        AppraisalId: AppraisalId
                    },
                    success: function (result) {
                        if (result.success) {
                            $('#row-' + AppraisalId).remove();
                        } else {
                            alert(result.message || "An error occurred while trying to delete the appraisal.");
                        }
                    },
                    error: function () {
                        alert("An error occurred while trying to delete the appraisal.");
                    }
                });
            }
        }
    </script>
}