@model HRMS_Web.Models.Goals

@{
    ViewData["Title"] = "Delete Goal";
}

<h2>Delete Goal</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Goal</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Model.Title
        </dd>
        <dt class="col-sm-2">
            Employee
        </dt>
        <dd class="col-sm-10">
            @Model.Employee
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            Start Date
        </dt>
        <dd class="col-sm-10">
            @Model.StartDate.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            End Date
        </dt>
        <dd class="col-sm-10">
            @Model.EndDate.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Model.Status
        </dd>
    </dl>

    <form asp-action="DeleteGoal">
        <input type="hidden" name="id" value="@Model.GoalId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Goals">Cancel</a>
    </form>
</div>
