@model HRMS_Web.Models.ApplicationUser
@using HRMS_Web.ViewModel;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Assignment Section</title>
    <link href="https://bootswatch.com/5/lux/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        body {
            background-color: #f8f9fa;
        }

        .assignment-details {
            display: none;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="nav-link active" asp-area="" asp-controller="Performance" asp-action="Index">Home</a>
            <a class="nav-link active" asp-area="" asp-controller="Performance" asp-action="Projects">Projects</a>
            <a class="nav-link active" asp-area="" asp-controller="Performance" asp-action="Tasks">Tasks</a>
            <a class="nav-link active" asp-area="" asp-controller="Performance" asp-action="ViewHistory">View History </a>
            <a class="nav-link active" asp-area="" asp-controller="Performance" asp-action="Assign">Assign</a>
        </div>
    </nav>
    <nav class="navbar navbar-expand-lg navbar-primary navbar-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Assignment Dashboard</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#current-assignments">Current Assignments</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#assignment-details">Assignment Details</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#assignment-updates">Assignment Updates</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!--current Assignment-->
    <div class="container mt-4" id="current-assignments">
        <h2>Current Assignments</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Task Name</th>
                    <th>Deadline</th>
                    <th>Priority</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <!-- Example row -->
                <tr onclick="showAssignmentDetails('1')">
                    <td>Project Alpha - Design Phase</td>
                    <td>2024-06-01</td>
                    <td>High</td>
                    <td>In Progress</td>
                </tr>
                <!-- Additional rows -->
            </tbody>
        </table>
    </div>

    <!--Assignment Details-->
    <div class="container mt-4 assignment-details" id="assignment-details">
        <h2>Assignment Details</h2>
        <h3 id="assignment-title">Project Alpha - Design Phase</h3>
        <p id="assignment-description">Brief description of Project Alpha's design phase.</p>
        <ul class="list-group">
            <li class="list-group-item"><strong>Scope:</strong> Detailed scope of the assignment.</li>
            <li class="list-group-item"><strong>Expected Outcomes:</strong> Expected outcomes and deliverables.</li>
            <li class="list-group-item"><strong>Resources Needed:</strong> List of resources required.</li>
            <li class="list-group-item"><strong>Dependencies:</strong> Other tasks or projects that this assignment depends on.</li>
        </ul>
    </div>

    <!--Assignment updates-->
    <div class="container mt-4" id="assignment-updates">
        <h2>Assignment Updates</h2>
        <form>
            <div class="mb-3">
                <label for="statusUpdate" class="form-label">Update Status</label>
                <select class="form-control" id="statusUpdate">
                  
                    <option>Not Started</option>
                    <option>In Progress</option>
                    <option>Completed</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="issueReport" class="form-label">Report Issue</label>
                <textarea class="form-control" id="issueReport" rows="3"></textarea>
            </div>
            <div class="mb-3">
                <label for="supportRequest" class="form-label">Request Support/Resources</label>
                <textarea class="form-control" id="supportRequest" rows="3"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit Update</button>
        </form>
    </div>
</body>

<script>
    function showAssignmentDetails(id) {
        // Example function to show assignment details based on ID
        // This would typically involve fetching data from a server
        document.getElementById('assignment-details').style.display = 'block';
        // Update the details section with appropriate data
        document.getElementById('assignment-title').textContent = 'Project Alpha - Design Phase';
        document.getElementById('assignment-description').textContent = 'Detailed information about the assignment.';
    }
</script>
</html>



