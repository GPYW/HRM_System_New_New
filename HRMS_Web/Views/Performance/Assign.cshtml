    <div class="row pt-4  pb-5">
        <div class="col-6">
            <h2 class="text-primary">Current Project Assignments</h2>
        </div>
        <div class="col-6" text-end>
            <a asp-controller="Performance" asp-action="CreateProject" class="btn btn-info">
                <i class="bi bi-plus-circle"></i>  Create Project
            </a>
        </div>
    </div>




    <table class="table table-striped">
        <thead>
            <tr>

                <th>Project Name</th>
                <th>Project Leader</th>
                <th>Project Team</th>
                <th>Deadline</th>
                <th>Priority</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
       
            @foreach (var projects in Model)
            {
                <tr>
                    <td>@projects.Project_Name</td>
                    <td>@projects.Project_Manager</td>
                    <td>@projects.Project_Team</td>
                    <td>@projects.EndDate.ToString("yyyy-MM-dd")</td>
                    <td>@projects.P_Priority</td>
                    <td>@projects.P_Status</td>
                    <td>
                        <button type="submit" class="btn btn-dark">Edit</button>
                        <button type="submit" class="btn btn-dark">Remove</button>
                    </td>
                </tr>
            }

        </tbody>
    </table>
 


