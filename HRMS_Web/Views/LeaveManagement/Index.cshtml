@using System.Security.Claims
@model IEnumerable<HRMS_Web.Models.LeaveManagement>
@using HRMS_Web;
@using Microsoft.AspNetCore.Identity
@using HRMS_Web.Models;

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<style>
    .nav_link {
        color: #000000 !important;
        font-weight: 500;
        margin-right: 20px;
    }

        .nav_link:hover {
            color: #17a2b8 !important;
        }
</style>

<nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #fff;">
    <div class="container-fluid">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link nav_link" asp-area="" asp-controller="LeaveManagement" asp-action="Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link nav_link" asp-area="" asp-controller="LeaveManagement" asp-action="Reports">Reports</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link nav_link" asp-area="" asp-controller="LeaveManagement" asp-action="ViewLeaveHistory">View History</a>
                </li>
                @if (User.IsInRole(SD.Role_Admin))
                {
                    <li class="nav-item">
                        <a class="nav-link nav_link" asp-area="" asp-controller="LeaveManagement" asp-action="LeaveRequest">Leave Request</a>
                    </li>
                }
                <div style="margin-left:240px;">
                    <a asp-controller="LeaveManagement" asp-action="LeaveForm" class="btn btn-dark">
                        <i class="bi bi-plus-circle"></i> Request a leave
                    </a>
                </div>
            </ul>
        </div>
    </div>
</nav>
<hr />

    @* <a href="@Url.Action("LeaveForm")" class="btn btn-primary">Add Leave</a> *@



    @*  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script> *@

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                @foreach (var leave in Model)
                {
                    <div class="col-lg-3 col-6">
                        <div class="small-box bg-info">
                            <div class="inner">
                                <p><b>@leave.LeaveType</b></p>
                                <div class="row">
                                    <div class="col-6">
                                        <div class="small-box bg-light">
                                            <div class="inner">
                                                <p><b>Total Leaves:</b></p>
                                                <p>@leave.NoOfLeaves_Year</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="small-box bg-warning">
                                            <div class="inner">
                                                <p><b>Remaining Leaves:</b></p>
                                                @foreach (var remainingLeave in leave.RemainingLeaves.Where(rl => rl.Id == User.FindFirstValue(ClaimTypes.NameIdentifier)))
                                                {
                                                    <p>@remainingLeave.NoOfRemainingLeave</p>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="icon">
                                <i class="bi bi-calendar2-event"></i>
                            </div>
                            <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    <hr />

    <div class="row">
        <div class="col-6">
            <h5>Pie Chart</h5>
            <canvas id="pieChart" width="200" height="110" style="width:197px;height:110px;"></canvas>
        </div>
        <div class="col-6">
            <h5>Bar Chart</h5>
            <canvas id="barChart" width="200" height="110" style="width:197px;height:110px;"></canvas>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $.ajax({
                type: "POST",
                url: "/LeaveManagement/GetTotalRemainingLeaves",
                data: "",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (data) {
                    const barChart = document.getElementById('barChart');

                    var _data = data;
                    var _labels = _data[0];
                    var _ChartData = _data[1];
                    var colors = ['Red', 'Blue', 'Green', 'Yellow'];

                    new Chart(barChart, {
                        type: 'bar',
                        data: {
                            labels: _labels,
                            datasets: [{
                                backgroundColor: colors,
                                data: _ChartData,
                                borderWidth: 1
                            }]
                        },
                        options: {
                            scales: {
                                y: {
                                    beginAtZero: true,
                                    ticks: {
                                        stepSize: 1
                                    }
                                }
                            }
                        }
                    });
                },
                error: function (error) {
                    console.log("Error: ", error);
                }
            });

            $.ajax({
                type: "POST",
                url: "/LeaveManagement/GetTotalAnnualLeaves",
                data: "",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (data) {
                    const pieChart = document.getElementById('pieChart');

                    var _data = data;
                    var _labels = _data[0];
                    var _ChartData = _data[1];
                    var colors = ['Red', 'Blue', 'Green', 'Yellow'];

                    new Chart(pieChart, {
                        type: 'pie',
                        data: {
                            labels: _labels,
                            datasets: [{
                                backgroundColor: colors,
                                data: _ChartData,
                                borderWidth: 1
                            }]
                        }
                    });
                },
                error: function (error) {
                    console.log("Error: ", error);
                }
            });
        });
    </script>
</html>