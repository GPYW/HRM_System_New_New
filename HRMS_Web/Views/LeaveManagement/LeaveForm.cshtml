@model HRMS_Web.Models.LeaveRequestModel
@{
    var leaveTypes = ViewBag.LeaveTypes as List<string>;
}

<div class="border p-3 mt-4">
    <div class="row pb-2">
        <div class="col-12">
            <h2 class="text-primary">Leave Request Form</h2>
            <hr />
        </div>
    </div>

    <form method="post" asp-action="LeaveForm">
        <div class="row">
            <div class="col-6 pb-4">
                <label for="leaveTypeDropdown">Leave Type:</label>
                <select id="leaveTypeDropdown" name="LeaveType" class="form-control" required>
                    <option value="" disabled selected>Select Leave Type</option>
                    @foreach (var leaveType in leaveTypes)
                    {
                        <option value="@leaveType">@leaveType</option>
                    }
                </select>
                <span asp-validation-for="LeaveType" class="text-danger"></span>
            </div>

            <div class="col-6 pb-4">
                <label for="remainingLeaves">Remaining Leaves</label>
                <input type="number" id="remainingLeaves" name="RemainingLeaves" class="form-control" readonly />
            </div>
        </div>

        <div class="row">
            <div class="col-6 pb-4">
                <label for="fromDate">From</label>
                <input type="date" id="fromDate" name="FromDate" class="form-control" required />
            </div>

            <div class="col-6 pb-4">
                <label for="toDate">To</label>
                <input type="date" id="toDate" name="ToDate" class="form-control" required />
            </div>
        </div>

        <div class="row">
            <div class="col-6 pb-4">
                <label for="numberOfDays">Number of Days</label>
                <input type="number" id="numberOfDays" name="NumberOfDays" class="form-control" readonly />
            </div>
            <div class="col-6 pb-4">
                <label for="leaveReason">Leave Reason</label>
                <textarea id="leaveReason" name="LeaveReason" class="form-control" required></textarea>
            </div>
        </div>

        <div class="row">
            <div class="col-3 pb-5">
                <button type="submit" class="btn btn-primary form-control">Request</button>
            </div>
            <div class="col-3 pb-5">
                <a asp-controller="LeaveManagement" asp-action="ViewLeaveHistory" class="btn btn-secondary form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $('#leaveTypeDropdown').change(function () {
            var selectedType = $(this).val();
            $.ajax({
                url: '@Url.Action("GetRemainingLeaves", "LeaveManagement")',
                type: 'GET',
                data: { leaveType: selectedType },
                success: function (data) {
                    $('#remainingLeaves').val(data);
                }
            });
        });

        $('#fromDate, #toDate').change(function () {
            var fromDate = new Date($('#fromDate').val());
            var toDate = new Date($('#toDate').val());
            if (fromDate && toDate && fromDate <= toDate) {
                var timeDiff = Math.abs(toDate.getTime() - fromDate.getTime());
                var diffDays = Math.ceil(timeDiff / (1000 * 3600 * 24)) + 1;
                $('#numberOfDays').val(diffDays);
            } else {
                $('#numberOfDays').val('');
            }
        });
    });
</script>
