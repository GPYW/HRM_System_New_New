@using HRMS_Web.Models
@model List<LeaveRequestModel>

<nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container-fluid">
        <a class="nav-link active" asp-area="" asp-controller="LeaveManagement" asp-action="Index">Home</a>
        <a class="nav-link active" asp-area="" asp-controller="LeaveManagement" asp-action="Reports">Reports</a>
        <a class="nav-link active" asp-area="" asp-controller="LeaveManagement" asp-action="ViewLeaveHistory">View Leave History</a>
        <a class="nav-link active" asp-area="" asp-controller="LeaveManagement" asp-action="LeaveRequest">Requested Leaves</a>
    </div>
</nav>

@{
    ViewBag.Title = "Leave History";
    var currentMonthLeaveRequests = ViewBag.CurrentMonthLeaveRequests as List<LeaveRequestModel>;
    var leaveTypes = ViewBag.LeaveTypes as List<string>;
}

<h2 class="text-primary">Requested Leaves</h2>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Leave Type</th>
            <th scope="col">From</th>
            <th scope="col">To</th>
            <th scope="col">No of Days</th>
            <th scope="col">Reason</th>
            <th scope="col">Duration</th>
            <th scope="col">Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var leave in currentMonthLeaveRequests)
        {
            <tr class="table-active">
                <td>@leave.LeaveManagement.LeaveType</td>
                <td>@leave.StartDate.ToShortDateString()</td>
                <td>@leave.EndDate.ToShortDateString()</td>
                <td>@leave.NumberOfLeaveDays</td>
                <td>@leave.LeaveReason</td>
                <td>@leave.LeaveDuration</td>
                <td>@leave.Status</td>
            </tr>
        }
    </tbody>
</table>

<h2 class="text-primary">Leave History</h2>

<form method="get" asp-action="ViewLeaveHistory">
    <div class="row">
        <div class="col-md-3">
            <label for="month">Month</label>
            <input type="number" id="month" name="month" class="form-control" min="1" max="12" />
        </div>
        <div class="col-md-3">
            <label for="year">Year</label>
            <input type="number" id="year" name="year" class="form-control" />
        </div>
        <div class="col-md-3">
            <label for="leaveType">Leave Type</label>
            <select id="leaveType" name="leaveType" class="form-control">
                <option value="">All</option>
                @foreach (var leaveType in leaveTypes)
                {
                    <option value="@leaveType">@leaveType</option>
                }
            </select>
        </div>
        <div class="col-md-3 mt-4">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </div>
</form>

<table class="table table-hover mt-4">
    <thead>
        <tr>
            <th scope="col">Leave Type</th>
            <th scope="col">From</th>
            <th scope="col">To</th>
            <th scope="col">No of Days</th>
            <th scope="col">Reason</th>
            <th scope="col">Duration</th>
            <th scope="col">Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var leave in Model)
        {
            <tr class="table-active">
                <td>@leave.LeaveManagement.LeaveType</td>
                <td>@leave.StartDate.ToShortDateString()</td>
                <td>@leave.EndDate.ToShortDateString()</td>
                <td>@leave.NumberOfLeaveDays</td>
                <td>@leave.LeaveReason</td>
                <td>@leave.LeaveDuration</td>
                <td>@leave.Status</td>
            </tr>
        }
    </tbody>
</table>