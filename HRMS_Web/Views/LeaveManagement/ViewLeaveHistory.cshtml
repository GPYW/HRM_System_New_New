@using HRMS_Web.ViewModels
@model LeaveHistoryViewModel

<nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container-fluid">
        <a class="nav-link active" asp-area="" asp-controller="LeaveManagement" asp-action="Index">Home</a>
        <a class="nav-link active" asp-area="" asp-controller="LeaveManagement" asp-action="Reports">Reports</a>
        <a class="nav-link active" asp-area="" asp-controller="LeaveManagement" asp-action="ViewLeaveHistory">View Leave History</a>
        <a class="nav-link active" asp-area="" asp-controller="LeaveManagement" asp-action="LeaveRequest">Requested Leaves</a>
    </div>
</nav>

@{
    ViewBag.Title = "Leave History";
}

<h2 class="text-primary">Requested Leaves</h2>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Leave Type</th>
            <th scope="col">From</th>
            <th scope="col">To</th>
            <th scope="col">No of Days</th>
            <th scope="col">Reason</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var leave in Model.PendingRequests)
        {
            <tr class="table-active">
                <td>@leave.LeaveManagement.LeaveType</td> <!-- Assuming LeaveType is a property of LeaveManagement -->
                <td>@leave.FromDate.ToShortDateString()</td>
                <td>@leave.ToDate.ToShortDateString()</td>
                <td>@leave.NumberOfDays</td>
                <td>@leave.LeaveReason</td>
            </tr>
        }
    </tbody>
</table>

<h2 class="text-primary">Leave History</h2>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Leave Type</th>
            <th scope="col">From</th>
            <th scope="col">To</th>
            <th scope="col">No of Days</th>
            <th scope="col">Reason</th>
            <th scope="col">Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var leave in Model.LeaveHistory)
        {
            <tr class="table-active">
                <td>@leave.LeaveManagement.LeaveType</td> <!-- Assuming LeaveType is a property of LeaveManagement -->
                <td>@leave.FromDate.ToShortDateString()</td>
                <td>@leave.ToDate.ToShortDateString()</td>
                <td>@leave.NumberOfDays</td>
                <td>@leave.LeaveReason</td>
                <td>@leave.Status</td>
            </tr>
        }
    </tbody>
</table>
