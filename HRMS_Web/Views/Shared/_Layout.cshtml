    @using HRMS_Web;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HRMS_Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HRMS_Web.styles.css" asp-append-version="true" />
    <script src="~/js/site.js" asp-append-version="true"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">

    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />

    @* <script src="https://cdn.tailwindcss.com"></script> *@

</head>
<body>
    <div id="main">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">


                    @if (User.IsInRole(SD.Role_Employee) || User.IsInRole(SD.Role_Admin))
                    {
                        <div class="nav-item">
                            <span class="navbar-brand" style="font-size:30px;cursor:pointer" onclick="openNav()">
                                <i class="bi bi-list"></i>
                            </span>
                        </div>
                    }
                
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    HRMS_Web
                 </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                      @if (User.IsInRole(SD.Role_Admin)){
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="EmployeeManagement" asp-action="Index">Employee Management</a>
                        </li>
                      }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div id="mySidenav" class="sidenav navbar-dark bg-primary">
            <span class="closebtn" onclick="closeNav()"><i class="bi bi-x"></i></span>

        <ul class="navbar-nav flex-grow-1">
            <li class="nav-item">
                <a class="ver-nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-house-door"></i> Home
                </a>
            </li>
            <li class="nav-item">
                <a class="ver-nav-link" asp-area="" asp-controller="" asp-action="">
                    <i class="bi bi-list-check"></i> Attendance Management
                 </a>
            </li>
            <li class="nav-item">
                <a class="ver-nav-link" asp-area="" asp-controller="" asp-action="">
                    <i class="bi bi-calendar2"></i> Leave Management
                </a>
            </li>
            <li class="nav-item">
                <a class="ver-nav-link" asp-area="" asp-controller="" asp-action="">
                    <i class="bi bi-bullseye"></i> Performance
                </a>
            </li>
            <li class="nav-item">
                <a class="ver-nav-link" asp-area="" asp-controller="ProfileSettings" asp-action="Index">
                        <i class="bi bi-person-gear"></i> Profile Settings
                </a>
            </li>
        </ul>
    </div>


    <footer class="border-top footer bg-primary text-muted">
        <div class="text-center text-light">
            Made with <i class="bi bi-heart-fill"></i> by Outstanders
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    </div>
</body>
</html>
