@model HRMS_Web.Models.ApplicationUser

<form id="deleteForm" asp-action="Delete" method="post">
    <div class="container">
        <div class="row">
            <div class="col-md-12"><hr />
                <h4>Are you sure you want to delete this user?</h4>
                <p><strong>ID:</strong> @Model.CompanyID</p>
                <p><strong>Name:</strong> @Model.FirstName @Model.LastName</p>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-6">
                <div class="mb-3">
                    <!-- Button to submit the form for deletion with confirmation -->
                    <button id="deleteSubmit" type="submit" class="w-100 btn btn-danger">Delete</button>
                </div>
            </div>

            <div class="col-md-6">
                <div class="mb-3">
                    <!-- Cancel button to go back to the Index action -->
                    <a asp-action="Index" class="btn btn-outline-secondary w-100">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // JavaScript to prompt confirmation before deleting
        $(function () {
            $('#deleteForm').submit(function () {
                return confirm('Are you sure you want to delete this user?'); // Confirmation dialog
            });
        });
    </script>
}
