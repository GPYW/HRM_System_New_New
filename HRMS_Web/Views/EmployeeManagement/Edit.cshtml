@using HRMS_Web.Models

@model ApplicationUser

<form method="post">
    <div class="card shadow border-0 mt-3">
        <div class="card-header text-black py-2">
            <h2 class="text-capitalize">Edit Employee Details</h2>
        </div>
        <div class="card-body p-6">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="FirstName" class="ms-2 text-muted">First Name</label>
                        <input asp-for="FirstName" class="form-control form-control-sm" aria-required="true" placeholder="First Name" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class=" mb-3">
                        <label asp-for="LastName" class="ms-2 text-muted">Last Name</label>
                        <input asp-for="LastName" class="form-control form-control-sm" aria-required="true" placeholder="Last Name" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="ms-2 text-muted">Email</label>
                <input asp-for="Email" class="form-control form-control-sm" type="email" aria-required="true" placeholder="name@example.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="row g-3">
                <div class="mb-3">
                    <label asp-for="Address" class="ms-2 text-muted">Address</label>
                    <input asp-for="Address" class="form-control" aria-required="true" placeholder="Address" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="PhoneNumber" class="ms-2 text-muted">Mobile No</label>
                        <input asp-for="PhoneNumber" class="form-control form-control-sm" aria-required="true" placeholder="Mobile No" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="DOB" class="ms-2 text-muted">Date of Birth</label>
                        <input asp-for="DOB" class="form-control form-control-sm" type="date" aria-required="true" />
                        <span asp-validation-for="DOB" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DepartmentID" class="control-label text-muted">Department</label>
                <select asp-for="DepartmentID" class="form-control"></select>
                <span asp-validation-for="DepartmentID" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <button id="registerSubmit" type="submit" class="w-100 btn btn-dark">Update</button>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class=" mb-3">
                        <a asp-action="Index" class="btn btn-outline-dark w-100">Cancel</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
