@using HRMS_Web.Models
@model List<ApplicationUser>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Employee List</title>
    <style>
        .text-center {
            text-align: center;
            vertical-align: middle;
        }
    </style>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-jc6qpZXu8h5V5m7p4U5xZx6NAl/LbD9FZT8K+2mbOUX+SRts6cfMmDe0fPIMxEa+" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" integrity="sha512-0C8F5W4QWZ6MSisOkby+mqplV4MDQZnTXtAk5oKCbSp1I6xzyIC9k3E9vpXAR5jEC+NYFj4Vh25nshJ8RV5Q4Q==" crossorigin="anonymous" />
</head>
<body>
    <div class="container">
        <br />
        <div class="row">
            <div class="col-12 text-end me-3">
                <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-dark" id="register">
                    Add New Employee  <i class="bi bi-person-add"></i>
                </a>
            </div>
        </div><br />
        <table id="example1" class="table table-striped table-sm table-bordered table-hover">
            <thead>
                <tr class="text-capitalize text-center">
                    <th style="font-weight:600;">First Name</th>
                    <th style="font-weight:600;">Last Name</th>
                    <th style="font-weight:600;">Image</th>
                    <th style="font-weight:600;">Email</th>
                    <th style="font-weight:600;">Address</th>
                    <th style="font-weight:600;">DOB</th>
                    <th style="font-weight:600;">Join Date</th>
                    <th style="font-weight:600;">Mobile No</th>
                    <th style="font-weight:600;">Edit</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr class="text-center">
                        <td>@obj.FirstName</td>
                        <td>@obj.LastName</td>
                        <td>
                            <img src="~/images/@obj.ProfileImage" width="30px" height="auto" class="rounded-circle" alt="user" />
                        </td>
                        <td>@obj.Email</td>
                        <td>@obj.Address</td>
                        <td>@(obj.DOB?.ToString("yyyy-MM-dd") ?? string.Empty)</td>
                        <td>@(obj.join_date?.ToString("yyyy-MM-dd") ?? string.Empty)</td>
                        <td>@obj.PhoneNumber</td>
                        <td>
                            <a asp-controller="EmployeeManagement" asp-action="Edit" asp-route-Id="@obj.Id" class="btn-sm btn btn-outline-dark">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a asp-controller="EmployeeManagement" asp-action="Delete" asp-route-Id="@obj.Id" class="btn-sm btn btn-outline-dark mx-4">
                                <i class="fa fa-trash"> </i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
