<!DOCTYPE HTML>
<html lang="en">
<head>
	<title>HRM System</title>
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta charset="UTF-8">

	<!-- Font -->
	<link href="https://fonts.googleapis.com/css?family=Poppins:400,500,600,700%7CAllura" rel="stylesheet">

	<!-- Stylesheets -->
	<link href="~/AdminLTE/hometemp/common-css/bootstrap.css" rel="stylesheet">

	<!-- Icons -->
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
	<link href="~/AdminLTE/hometemp/common-css/ionicons.css" rel="stylesheet">

	<!-- REVOLUTION STYLE SHEETS -->
	<link rel="stylesheet" type="text/css" href="~/AdminLTE/hometemp/revolution/css/settings.css">

	<!-- REVOLUTION JS FILES -->
	<script type="text/javascript" src="~/AdminLTE/hometemp/revolution/js/jquery.themepunch.tools.min.js"></script>
	<script type="text/javascript" src="~/AdminLTE/hometemp/revolution/js/jquery.themepunch.revolution.min.js"></script>

	<link href="~/AdminLTE/hometemp/01_Photography/css/styles.css" rel="stylesheet">

	<link href="~/AdminLTE/hometemp/01_Photography/css/responsive.css" rel="stylesheet">


</head>
<body style="background-color:white"  class="text-primary">

	<header>
		<a asp-area="" asp-controller="Home" asp-action="Index">
			<img src="~/AdminLTE/dist/img/AdminLTELogo.png" alt="Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
			<span class="brand-text font-weight-light">HRMS</span>
		</a>

		<a class="right-area" id="login" asp-area="Identity" asp-page="/Account/Login">
			<i class="bi bi-person-circle"></i> Login
		</a>
		<style>
			html, body {
				height: 100%;
				overflow: hidden;
			}

			.page-content {
				overflow-y: auto;
				max-height: calc(100% - 130px);
			}
		</style>

	</header>

	<div>
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>


	<footer class="border-top footer text-primary" style="background-color:white">

		<span class="pt-3 pb-3">Made with <i class="bi bi-heart-fill"></i> by Outstanders</span>

		<ul class="pr-3 mb-6 social-icons">
			<li ><a href="#"><i class="ion-social-facebook-outline"></i></a></li>
			<li><a href="#"><i class="ion-social-twitter-outline"></i></a></li>
			<li><a href="#"><i class="ion-social-instagram-outline"></i></a></li>
			<li><a href="#"><i class="ion-social-vimeo-outline"></i></a></li>
			<li><a href="#"><i class="ion-social-pinterest-outline"></i></a></li>
		</ul><!-- social-icons -->

	</footer>
	<script src="~/AdminLTE/hometemp/common-js/jquery-3.2.1.min.js"></script>

	<script src="~/AdminLTE/hometemp/common-js/tether.min.js"></script>

	<script src="~/AdminLTE/hometemp/common-js/bootstrap.js"></script>

	<!-- REVOLUTION JS FILES -->
	<script type="text/javascript" src="~/AdminLTE/hometemp/revolution/js/jquery.themepunch.tools.min.js"></script>
	<script type="text/javascript" src="~/AdminLTE/hometemp/revolution/js/jquery.themepunch.revolution.min.js"></script>


	<!-- SLIDER REVOLUTION 5.0 EXTENSIONS  (Load Extensions only on Local File Systems !  The following part can be removed on Server for On Demand Loading) -->
	<script type="text/javascript" src="~/AdminLTE/hometemp/revolution/js/extensions/revolution.extension.actions.min.js"></script>
	<script type="text/javascript" src="~/AdminLTE/hometemp/revolution/js/extensions/revolution.extension.carousel.min.js"></script>
	<script type="text/javascript" src="~/AdminLTE/hometemp/revolution/js/extensions/revolution.extension.kenburn.min.js"></script>
	<script type="text/javascript" src="~/AdminLTE/hometemp/revolution/js/extensions/revolution.extension.layeranimation.min.js"></script>
	<script type="text/javascript" src="~/AdminLTE/hometemp/revolution/js/extensions/revolution.extension.migration.min.js"></script>
	<script type="text/javascript" src="~/AdminLTE/hometemp/revolution/js/extensions/revolution.extension.navigation.min.js"></script>
	<script type="text/javascript" src="~/AdminLTE/hometemp/revolution/js/extensions/revolution.extension.parallax.min.js"></script>
	<script type="text/javascript" src="~/AdminLTE/hometemp/revolution/js/extensions/revolution.extension.slideanims.min.js"></script>
	<script type="text/javascript" src="~/AdminLTE/hometemp/revolution/js/extensions/revolution.extension.video.min.js"></script>


	<script src="~/AdminLTE/hometemp/common-js/scripts.js"></script>
	@await RenderSectionAsync("Scripts", required: false)

</body>
</html>
