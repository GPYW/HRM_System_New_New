@using HRMS_Web.Models


@model ApplicationUser

<form method="post" asp-controller="ProfileSettings" asp-action="Update">
    <div class="card shadow border-0 mt-2">
        <div class="card-header bg-primary ml-0 py-2">
            <div class="row">
                <div class="col-12 text-white text-center">
                    <h2 class="py-2">Edit Employee Details</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="row pt-4">
                <div class="col-md-12">


                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="row">
                        <div class="col-6">
                            <div class="form-floating mb-3 ">
                                <input asp-for="FirstName" class="form-control" autocomplete="FirstName" aria-required="true" placeholder="FirstName" />
                                <label class="ms-2 text-muted">FirstName</label>
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-6">
                            <div class="form-floating mb-3 ">
                                <input asp-for="LastName" class="form-control" autocomplete="LastName" aria-required="true" placeholder="LastName" />
                                <label class="ms-2 text-muted">LastName</label>
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>


                    <div class="form-floating mb-3 col-md-12">
                        <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label class="ms-2 text-muted">Email</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>



                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="Address" class="form-control" autocomplete="Address" aria-required="true" placeholder="Address" />
                        <label class="ms-2 text-muted">Address</label>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="PhoneNumber" class="form-control" autocomplete="MobileNo" aria-required="true" placeholder="MobileNo" />
                        <label class="ms-2 text-muted">MobileNo</label>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-6">
                            <div class="form-floating mb-3 ">
                                <input asp-for="join_date" class="form-control" autocomplete="join_date" aria-required="true" placeholder="join_date" />
                                <label class="ms-2 text-muted">join_date</label>
                                <span asp-validation-for="join_date" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-6">
                            <div class="form-floating mb-3 ">
                                <input asp-for="DOB" class="form-control" autocomplete="DOB" aria-required="true" placeholder="DOB" />
                                <label class="ms-2 text-muted">DOB</label>
                                <span asp-validation-for="DOB" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-6 col-md-3">
                            <button type="submit" class="w-100 btn btn-lg btn-primary">Update</button>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="ProfileSettings" asp-action="Index" class="w-100 btn btn-lg btn-secondary">Discard Changes</a>
                        </div>
                    </div>

</form>
                </div>

            </div>

        </div>
    </div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}












